      {
        "$ref": "../../parameters/transaction/messageToEncryptToSelfIsText.json"
      },
      {
        "$ref": "../../parameters/transaction/encryptToSelfMessageData.json"
      },
      {
        "$ref": "../../parameters/transaction/encryptToSelfMessageNonce.json"
      }
